<!DOCTYPE html>
<html lang="nl">
<%- include('../partials/head') %>

    <body>
        <%- include('../partials/header') %>

            <main class="container my-5">
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-6">
                        <div class="card shadow">
                            <div class="card-header bg-primary text-white">
                                <h3 class="mb-0">
                                    <%= post ? 'Nieuws post bewerken' : 'Nieuwe post aanmaken' %>
                                </h3>
                            </div>
                            <div class="card-body">

                                <form id="nieuwsForm" method="POST"
                                    action="<%= post ? '/nieuws/admin/edit/' + post._id : '/nieuws/admin' %>"
                                    enctype="multipart/form-data">

                                    <input type="hidden" name="returnPage" value="<%= returnPage %>">

                                    <!-- Titel -->
                                    <div class="mb-3">
                                        <label for="title" class="form-label">Titel *</label>
                                        <input type="text" class="form-control" id="title" name="title" required
                                            placeholder="Bv. Startdag 2025" value="<%= post ? post.title : '' %>">
                                    </div>

                                    <!-- Afbeelding -->
                                    <div>
                                        <label for="image" class="form-label">Afbeelding (optioneel)</label>
                                    </div>
                                    <div class="mb-3 p-3 border rounded text-center">
                                        <input type="hidden" name="existingImageUrl" id="existingImageUrl" value="<%= post && post.imageUrl ? post.imageUrl : '' %>">
                                        <input type="hidden" name="existingImagePublicId" id="existingImagePublicId" value="<%= post && post.imagePublicId ? post.imagePublicId : '' %>">
                                        <input type="hidden" name="imageRemoved" id="imageRemoved" value="false">

                                        <div id="imageUploadSection" style="display: none;">
                                            <input type="file" class="form-control mx-auto" id="image" name="image"
                                                accept="image/jpeg,image/png,image/webp">
                                            <div class="form-text">( Max 5MB - JPG, PNG of WEBP )</div>
                                        </div>

                                        <div id="imageDisplaySection" style="display: none;">
                                            <label class="form-label d-block mb-3">Huidige afbeelding</label>
                                            <img id="previewImage" alt="Huidige afbeelding"
                                                class="img-thumbnail d-block mb-3 mx-auto"
                                                style="max-width: 200px; max-height: 200px;">

                                            <button type="button" class="btn btn-sm btn-outline-danger mx-auto"
                                                id="btnRemoveImage">
                                                <i class="bi bi-trash me-1"></i> Verwijderen
                                            </button>
                                        </div>

                                    </div>

                                    <!-- Inhoud -->
                                    <div class="mb-3">
                                        <label for="description"
                                            class="form-label d-flex justify-content-between align-items-center">
                                            <span>Inhoud *</span>
                                            <button type="button" id="insertLinkBtn"
                                                class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-link-45deg"></i> Link invoegen
                                            </button>
                                        </label>

                                        <textarea class="form-control" id="description" rows="8" required
                                            placeholder="Inhoud van post..."></textarea>

                                        <input type="hidden" id="hiddenDescription" name="description" value="<%= post && post.description ? post.description : '' %>">
                                    </div>

                                    <div class="d-flex gap-2">
                                        <a href="/nieuws/?page=<%= returnPage %>" class="btn btn-secondary flex-grow-1">
                                            Annuleren
                                        </a>
                                        <button type="submit" class="btn btn-primary flex-grow-1">
                                            <%= post ? 'Opslaan' : 'Publiceer' %>
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </main>

            <%- include('../partials/footer') %>

                <div class="modal fade" id="linkModal" tabindex="-1" aria-labelledby="linkModalLabel"
                    aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="linkModalLabel">Link invoegen</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                    aria-label="Sluiten"></button>
                            </div>
                            <div class="modal-body">
                                <div class="mb-3">
                                    <label for="linkText" class="form-label">Zichtbare tekst</label>
                                    <input type="text" id="linkText" class="form-control" placeholder="Bv. Klik hier"
                                        required>
                                </div>
                                <div class="mb-3">
                                    <label for="linkUrl" class="form-label">URL</label>
                                    <input type="url" id="linkUrl" class="form-control"
                                        placeholder="https://voorbeeld.be" required>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary"
                                    data-bs-dismiss="modal">Annuleren</button>
                                <button type="button" class="btn btn-primary" id="confirmInsertLink">Invoegen</button>
                            </div>
                        </div>
                    </div>
                </div>

                <script src="/js/nieuws-editor.js"></script>
    </body>

</html>